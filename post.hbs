{{!< default }}
{{#post}}
{{> header}}
<main class="{{post_class}}">
	<article class="post__main {{#unless feature_image}}no-image{{/unless}}">
		{{#if feature_image}}
		<figure class="kg-image-card post__image">
			<img src="{{feature_image}}" class="kg-image" />
		</figure>
		{{/if}}
		<section class="post__meta">
			<time class="post__date" datetime="{{date format=" MMMM DD YYYY "}}">
				{{date format="MMMM DD YYYY"}}
			</time>
		</section>
		<header class="post__header">
			<h1 class="post__header-text">{{title}}</h1>
		</header>
		<section class="post__content {{#unless feature_image}}post__content--no-img{{/unless}}">
			<div class="kg-card-markdown">
				{{content}}
			</div>
		</section>
		<nav class="post__nav">
			{{#next_post}}
			<div class="post__nav--item post__nav--next">
				<a href="{{url}}">&larr; {{title}}</a>
			</div>
			{{/next_post}} {{#prev_post}}
			<div class="post__nav--item post__nav--prev">
				<a href="{{url}}">{{title}} &rarr;</a>
			</div>
			{{/prev_post}}
			</div>
	</article>
	{{> social}}
	{{> disqus}}
</main>
{{> footer}}
{{/post}}